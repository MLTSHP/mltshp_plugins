{
    "name": "mltshp",
    "version": "3.0",
    "manifest_version": 3,
    "description": "Post photos to mltshp.com.",
    "action": {
        "default_icon": {
            "16": "icon_16.png",
            "48": "icon_48.png",
            "96": "icon_96.png",
            "128": "icon_128.png"
        },
        "default_popup": "menu.html",
        "default_title": "MLTSHP"
    },
    "icons": {
        "16": "icon_16.png",
        "48": "icon_48.png",
        "96": "icon_96.png",
        "128": "icon_128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "optional_host_permissions": [
        "http://*/*",
        "http://*/",
        "https://*/"
    ],
    "permissions": [
        "tabs",
        "contextMenus"
    ]
}